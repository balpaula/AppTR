<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.paula.apptr.pantallaElsColors">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ELS COLORS INVISIBLES"
        android:id="@+id/textTítolElsColors"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ex. Permet identificar 12 colors"
        android:id="@+id/textColorsIdentificar"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_below="@+id/textTítolElsColors"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:id="@+id/imatgeCercleCromàtic"
        android:background="@drawable/wheel02"
        android:layout_below="@+id/textColorsIdentificar"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ex. Classificació dels colors"
        android:id="@+id/textClassificacióColors"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_below="@+id/imatgeCercleCromàtic"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Primaris:"
        android:id="@+id/textColorsPrimaris"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="left|center"
        android:layout_below="@+id/textClassificacióColors"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Secundaris"
        android:id="@+id/textColorsSecundaris"
        android:gravity="left|center"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/textColorsPrimaris"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Terciaris"
        android:id="@+id/textColorsTerciaris"
        android:gravity="left|center"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/textColorsSecundaris"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/botóImatgeEnrere"
        android:layout_alignParentTop="true"
        android:background="@drawable/enrere"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
